# Database
DATABASE_URL="postgresql://familyhub:familyhub@localhost:5432/familyhub?schema=public"

# Redis (for BullMQ background jobs)
REDIS_URL="redis://localhost:6379"

# Session encryption key (min 32 characters, change in production!)
SESSION_SECRET="generate-a-random-32-char-string-here"

# Session TTL in seconds (default: 24 hours)
SESSION_TTL=86400
# "Remember me" TTL in seconds (default: 30 days)
REMEMBER_ME_TTL=2592000

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=60

# Registration Rate Limiting
RATE_LIMIT_REGISTER_ATTEMPTS=3
RATE_LIMIT_REGISTER_WINDOW=3600

# Account Lockout
ACCOUNT_LOCKOUT_THRESHOLD=10
ACCOUNT_LOCKOUT_DURATION=3600

# Public app URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google Calendar OAuth (Phase 3)
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:3000/api/calendar-sync/google/callback"

# Token encryption (AES-256-GCM) - 32-byte hex key
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=""

# Microsoft Outlook OAuth
# Register app at https://portal.azure.com â†’ App registrations
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID="common"
MICROSOFT_REDIRECT_URI="http://localhost:3000/api/calendar-sync/outlook/callback"

# Socket.IO (real-time updates)
SOCKET_PORT=3001
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# Web Push (VAPID keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:admin@familyhub.local"

# Backup settings
BACKUP_DIR="/backups"
BACKUP_RETENTION_DAYS=7

# SMTP Email Settings (for verification, password reset, notifications)
# For development, use maildev: npx maildev (SMTP on :1025, Web UI on :1080)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="Family Hub <noreply@familyhub.local>"

# Production Deployment (Docker)
# REQUIRED: Set your domain for HTTPS certificate generation
DOMAIN="test.familyhub.local"
# REQUIRED: Generate a strong password, e.g.: openssl rand -base64 24
POSTGRES_PASSWORD=""
